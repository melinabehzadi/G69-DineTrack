<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set default colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize widget colors -->
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="editTextStyle">@style/CustomEditText</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/box_background</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/dancing_script_regular</item> <!-- Default font -->
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/box_background</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/dancing_script_regular</item>
    </style>

    <!-- Christmas Themed Button Style -->
    <style name="ChristmasButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- Festive Red -->
        <item name="android:textColor">@color/colorBackground</item> <!-- White Text -->
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <!-- Christmas Highlighted Button Style -->
    <style name="ChristmasHighlightButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorGold</item> <!-- Festive Gold -->
        <item name="android:textColor">@color/colorTextPrimary</item> <!-- Primary Text Color -->
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing_script_semibold</item>
    </style>

    <!-- Christmas Card View Style -->
    <style name="ChristmasCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSilver</item> <!-- Silver for card background -->
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Christmas Themed TextView -->
    <style name="ChristmasTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item> <!-- Festive Green -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dancing_script_medium</item>
    </style>

    <!-- Large Christmas Title Text -->
    <style name="ChristmasTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorHighlight</item> <!-- Metallic Gold -->
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <!-- Small Christmas Caption Text -->
    <style name="ChristmasCaptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextSecondary</item> <!-- Secondary Text Color -->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/dancing_script_regular</item>
    </style>
</resources>
