<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Name Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Address Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Address"
            android:inputType="textPostalAddress"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Phone Number Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Description Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description of the restaurant"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Tags Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tags (e.g., vegan, Italian, Thai)"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Rating Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#CCCCCC"
            android:elevation="2dp"
            android:padding="8dp"
            android:entries="@array/rating_options" />
    </LinearLayout>
</ScrollView>