<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/third"
    android:padding="16dp"
    android:fillViewport="true"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back_to_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@android:color/transparent"
            android:contentDescription="Back to Home"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="About"
            style="@style/ChristmasTitleText" />

        <!-- Version -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Version"
                style="@style/ChristmasTextView"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                style="@style/ChristmasTextView"
                android:gravity="end" />
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Team Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Team"
            style="@style/ChristmasTitleText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"

            android:text="Valeria Arce - Developer\nMelina Behzadi Nejad - Developer\nOscar Piedrasanta Diaz - Developer\nMobinasadat Zargary - Developer"
            style="@style/ChristmasTextView" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Acknowledgements Section -->
        <TextView
            style="@style/ChristmasTitleText"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="#99BBD2E7"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Acknowledgements" />

        <TextView
            style="@style/ChristmasCaptionText"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="16dp"
            android:background="#99BBD2E7"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="This app uses the Google Maps API to provide mapping and directions functionality.\nÂ© 2024 Google LLC. All rights reserved." />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Support Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Support"
                style="@style/ChristmasTitleText"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact@DineTrack.com"
                style="@style/ChristmasTextView"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
