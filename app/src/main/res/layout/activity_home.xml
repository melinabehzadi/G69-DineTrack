<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <!-- Dine Track Title at the Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/title_dine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="DINE"
            style="@style/ChristmasTitleText" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/title_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TRACK"
            style="@style/ChristmasTitleText" />
    </LinearLayout>

    <!-- Divider Line Below Title -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle Positioned Below the Title -->
    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="My Personal Restaurant Guide"
        style="@style/ChristmasTextView" />

    <!-- Divider Line Below Subtitle -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"
        android:layout_marginBottom="16dp" />

    <!-- Favorites, About, Add Buttons in the Middle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btn_favorites"
                android:layout_width="103dp"
                android:layout_height="97dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Favorites"
                style="@style/ChristmasTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btn_about"
                android:layout_width="102dp"
                android:layout_height="97dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="About"
                style="@style/ChristmasTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="96dp"
                android:layout_height="98dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Add"
                style="@style/ChristmasTextView" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider Line Below Buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"
        android:layout_marginBottom="16dp" />

    <!-- Search Bar with Frame -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/frame_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="8dp"
            android:hint="Enter the restaurant name..."
            android:inputType="text"
            android:padding="8dp"
            style="@style/CustomEditText" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_search" />
    </LinearLayout>

</LinearLayout>
