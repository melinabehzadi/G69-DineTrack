<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title Row with DINE, Logo, and TRACK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/title_dine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINE"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/academy_engraved"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/app_logo"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/title_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACK"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/academy_engraved"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Subtitle Box -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/app_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Personal Restaurant Guide"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="@font/comic"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="12dp">

                <ImageButton
                    android:id="@+id/btn_favorites"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_star"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/akaya"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="12dp">

                <ImageButton
                    android:id="@+id/btn_about"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_info"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/akaya"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="12dp">

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_add"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/akaya"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Search Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search and filter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/akaya"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter the restaurant name..."
                android:background="@android:color/white"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu_search"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
